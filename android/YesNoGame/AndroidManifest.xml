<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="example.swa.yesnogame"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/lightbulb_256"
        android:label="@string/app_name"
        android:theme="@style/android:Theme.Holo" >
        <activity
            android:name="example.swa.yesnogame.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="example.swa.yesnogame.InitPollActivity"
            android:label="@string/title_activity_init_poll" >
        </activity>
        <activity
            android:name="example.swa.yesnogame.VoteActivity"
            android:label="@string/title_activity_vote" >
        </activity>
        <activity
            android:name="example.swa.yesnogame.PollResultActivity"
            android:label="@string/title_activity_poll_result" >
        </activity>
    </application>

</manifest>
